{
    "name": "umi-feeds-backend",
    "version": "0.1.0",
    "description": "Backend server for the Umi Feeds app",
    "repository": {
        "type": "git",
        "url": "https://github.com/GTBitsOfGood/umi-feeds-backend"
    },
    "author": "Bits of Good",
    "license": "GPL",
    "scripts": {
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
        "build-ts": "tsc",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve": "node dist/server.js",
        "serve-debug": "nodemon --inspect dist/server.js",
        "start": "npm run watch-debug",
        "test": "jest --forceExit --coverage --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon dist/server.js",
        "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "run:ts-node:script": "cross-env ts-node -O {\\\"module\\\":\\\"commonjs\\\"} -r module-alias/register",
        "lint:tsc": "tsc --noEmit",
        "lint:eslint": "eslint \"./**/*.{tsx,ts,js,jsx}\" --fix --cache",
        "secrets": "npm secrets:logout && cross-env-shell BW_SESSION=`bw login product@bitsofgood.org --raw` \"yarn secrets:sync\"",
        "secrets:logout": "(bw logout || exit 0)",
        "secrets:login": "bw login product@bitsofgood.org",
        "secrets:sync": "bw sync && bw get item gen-soln/.env.local | fx .notes > \".env.local\""
    },
    "dependencies": {
        "@bitwarden/cli": "^1.14.0",
        "async": "^3.2.0",
        "bcrypt-nodejs": "^0.0.3",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.2.0",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-session": "^1.17.1",
        "express-validator": "^6.9.2",
        "fbgraph": "^1.4.4",
        "lodash": "^4.17.20",
        "lusca": "^1.6.1",
        "mongoose": "^5.11.15",
        "nodemailer": "^6.4.17",
        "passport": "^0.4.1",
        "passport-facebook": "^3.0.0",
        "passport-local": "^1.0.0",
        "pug": "^2.0.4",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/async": "^3.2.5",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.33",
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.14",
        "@types/compression": "^1.7.0",
        "@types/concurrently": "^4.1.1",
        "@types/connect-mongo": "^3.1.3",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.8.1",
        "@types/express": "^4.17.11",
        "@types/express-flash": "0.0.1",
        "@types/express-session": "^1.17.3",
        "@types/jest": "^24.9.1",
        "@types/jquery": "^3.5.5",
        "@types/lodash": "^4.14.168",
        "@types/lusca": "^1.6.2",
        "@types/mongoose": "^5.10.3",
        "@types/node": "^12.19.16",
        "@types/node-sass": "^4.11.1",
        "@types/nodemailer": "^6.4.0",
        "@types/passport": "^1.0.5",
        "@types/passport-facebook": "^2.1.10",
        "@types/passport-local": "^1.0.33",
        "@types/pug": "^2.0.4",
        "@types/request": "^2.48.5",
        "@types/request-promise": "^4.1.47",
        "@types/shelljs": "^0.8.8",
        "@types/supertest": "^2.0.10",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "chai": "^4.3.0",
        "concurrently": "^5.3.0",
        "eslint": "^6.8.0",
        "jest": "^26.6.3",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.7",
        "shelljs": "^0.8.4",
        "supertest": "^4.0.2",
        "ts-jest": "^26.5.0",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    }
}
